<h1>CREATE NEW USER</h1>

<% if flash[:user_errors] %>
  <% flash[:user_errors].each do |error| %>
    <p style='color: red;'><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :birthday %>
  <%= f.text_field :birthday %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.label :sign_id %>
  <%= f.collection_select :sign_id, @signs, :id, :name  %>

  <%= f.submit %>
  
<% end %>